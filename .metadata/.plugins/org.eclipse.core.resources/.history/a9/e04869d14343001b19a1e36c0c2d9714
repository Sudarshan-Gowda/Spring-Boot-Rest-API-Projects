
server.servlet.context-path=/restapi
spring.application.name=Rest API
server.port=8081

########## First Data Source ##########
spring.datasource.first.jdbcUrl=jdbc:oracle:thin:@localhost:1521/ORCL
spring.datasource.first.username=RESEARCH
spring.datasource.first.password=password
spring.datasource.first.driver-class-name=oracle.jdbc.OracleDriver
spring.datasource.first.driverClassName=oracle.jdbc.OracleDriver

# HikariCP settings
spring.datasource.first.hikari.connection-timeout=60000
spring.datasource.first.hikari.maximum-pool-size=5
spring.datasource.first.hikari.minimum-idle=5
spring.datasource.first.hikari.max-lifetime=2000000
spring.datasource.first.hikari.pool-name=RestAPI

########## Second Data Source ##########
spring.datasource.second.jdbcUrl=jdbc:oracle:thin:@localhost:1521/ORCL
spring.datasource.second.username=SHOPPING_CART
spring.datasource.second.password=password
spring.datasource.second.driver-class-name=oracle.jdbc.OracleDriver
spring.datasource.second.driverClassName=oracle.jdbc.OracleDriver

# HikariCP settings
spring.datasource.second.hikari.connection-timeout=60000
spring.datasource.second.hikari.maximum-pool-size=5
spring.datasource.second.hikari.minimum-idle=5
spring.datasource.second.hikari.max-lifetime=2000000
spring.datasource.second.hikari.pool-name=RestAPI

### Common ###
spring.jpa.hibernate.dialect=org.hibernate.dialect.Oracle12cDialect
